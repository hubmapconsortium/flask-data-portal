{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/hubmapconsortium/prov-vis/#schema",
  "title": "HuBMAP PROV schema",
  "type": "object",
  "definitions": {
    "string_to_whatever": {
      "type": "object",
      "patternProperties": {
        ".": {
          "anyOf": [
            {"type": "string"},
            {"type": "boolean"},
            {"type": "object"}
          ]
        }
      }
    },
    "string_to_string_to_whatever": {
      "type": "object",
      "patternProperties": {
        ".": {
          "$ref": "#/definitions/string_to_whatever"
        }
      }
    }
  },
  "additionalProperties": false,
  "required": ["prefix", "entity", "activity", "wasGeneratedBy", "used"],
  "properties": {
    "prefix": {
      "allOf": [{ "$ref": "#/definitions/string_to_whatever" }, { "$comment": "TODO: Add 'prov'." }]
    },
    "entity": { "$ref": "#/definitions/string_to_string_to_whatever" },
    "activity": { "$ref": "#/definitions/string_to_string_to_whatever" },
    "wasGeneratedBy": { "$ref": "#/definitions/string_to_string_to_whatever" },
    "wasStartedBy": { "$ref": "#/definitions/string_to_string_to_whatever" },
    "wasAssociatedWith": { "$ref": "#/definitions/string_to_string_to_whatever" },
    "mentionOf": { "$ref": "#/definitions/string_to_string_to_whatever" },
    "hadMember": { "$ref": "#/definitions/string_to_string_to_whatever" },
    "wasEndedBy": { "$ref": "#/definitions/string_to_string_to_whatever" },
    "specializationOf": { "$ref": "#/definitions/string_to_string_to_whatever" },
    "used": { "$ref": "#/definitions/string_to_string_to_whatever" },
    "agent": { "$ref": "#/definitions/string_to_string_to_whatever" },
    "bundle": { "$ref": "#/definitions/string_to_string_to_whatever" },
    "actedOnBehalfOf": { "$ref": "#/definitions/string_to_string_to_whatever" }
  }
}
